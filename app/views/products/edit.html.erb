<h1 class="page-heading">Edit Product</h1>
<%= render "form", product: @product, label_submit: "Edit Product" %>

<style>

.page-heading {
    text-align: center;
    font-size: 2.2rem;
    font-weight: 700;
    color: #007bff;
    margin-bottom: 28px;
    letter-spacing: 1px;
    text-shadow: 0 2px 8px rgba(0,123,255,0.08);
}
.product-form {
    max-width: 400px;
    margin: 0 auto;
    background: #fff;
    padding: 32px 24px;
    border-radius: 10px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.08);
}
.form-group {
    margin-bottom: 22px;
}
.form-label {
    display: block;
    margin-bottom: 7px;
    font-weight: 600;
    color: #333;
    letter-spacing: 0.5px;
    font-size: 1rem;
}
.styled-input {
    width: 100%;
    padding: 10px 14px;
    border: 1.5px solid #d1d5db;
    border-radius: 6px;
    font-size: 1rem;
    background: #f9fafb;
    transition: border-color 0.2s, box-shadow 0.2s;
    outline: none;
    box-sizing: border-box;
}
.styled-input:focus {
    border-color: #007bff;
    background: #fff;
    box-shadow: 0 0 0 2px rgba(0,123,255,0.12);
}
#error_explanation {
    color: #a94442;
    background: #f2dede;
    border: 1px solid #ebccd1;
    padding: 10px;
    margin-bottom: 20px;
    border-radius: 4px;
}
.btn.btn-primary {
    background: linear-gradient(90deg, #007bff 0%, #0056b3 100%);
    color: #fff;
    border: none;
    padding: 10px 22px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    transition: background 0.2s, box-shadow 0.2s;
    box-shadow: 0 2px 8px rgba(0,123,255,0.08);
}
.btn.btn-primary:hover {
    background: linear-gradient(90deg, #0056b3 0%, #007bff 100%);
    box-shadow: 0 4px 16px rgba(0,123,255,0.12);
}
</style>
